<%- include('./partials/header') %>

<main>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6">
          <h1>Get the Loan You Need</h1>
          <p>Apply now and get approved in minutes.</p>
          <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#applicationModal">Start Application</button>
        </div>
        <div class="col-md-6">
          <img class="animated-image" src="/assets/loan-animation.gif" alt="Loan Animation">
        </div>
      </div>
    </div>
</main>
  


<div class="modal fade" id="applicationModal" tabindex="-1" aria-labelledby="applicationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="applicationModalLabel">Loan Application Form</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form method="POST" action="/fetch-balance-sheet">
                <div class="mb-3">
                <label for="businessName" class="form-label">Name of Business</label>
                <input type="text" class="form-control" id="businessName" name="businessName" >
                </div>
                <div class="mb-3">
                <label for="yearEstablished" class="form-label">Year Established</label>
                <input type="number" class="form-control" id="yearEstablished" name="yearEstablished" >
                </div>
                <div class="mb-3">
                <label for="loanAmount" class="form-label">Loan Amount</label>
                <input type="number" class="form-control" id="loanAmount" name="loanAmount" >
                </div>
                <div class="mb-3">
                <label for="accountingSoftware" class="form-label">Accounting Software</label>
                <select class="form-select" id="accountingSoftware" name="accountingSoftware" >
                    <option value="">Select an option</option>
                    <option value="xero">Xero</option>
                    <option value="myob">MYOB</option>
                </select>
                </div>
          
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Fetch Balance Sheet</button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div>
  




<%- include('./partials/footer') %>